<div class="booking-container-show">
  <img class="img-properties-form" src="<%= @booking.venue.image_urls.first %>" alt="Venue-picture">
  <div class="title-show ">
    <h2>Reservation status </h2>
    <% if @booking%>
    <%= "Booked succesfully"%>
    <% else%>
    <%= "Not booked"%>
    <% end%>
  </div>

  <div class="second-text-show">
    <h2>Reservation information</h2>
    <h3><%= @booking.venue.name %></h3>
    <h3><%="#{@booking.user.first_name} #{@booking.user.last_name}" %></h3>
    <h3><%= @booking.venue.address %></h3>
    <h3><%= @booking.booking_date %></h3>
    <p>*Reservation valid for the entire day</p>
  </div>

  <div class="container-bf">
  </div>
</div>
